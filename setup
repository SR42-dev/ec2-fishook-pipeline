# a script to install dependencies and set the appropriate permissions on the remote machine

sudo apt install python-is-python3
sudo apt install python3-pip

sudo pip3 install pyrebase
sudo pip3 install google-cloud-storage
sudo pip3 install firebase
sudo pip3 install firebase_admin
sudo pip3 install numpy
sudo pip3 install pandas
sudo pip3 install matplotlib
sudo pip3 install ipython
sudo pip3 install scikit-learn
sudo pip3 install tensorflow
sudo pip3 install pytest-shutil
sudo pip3 install shutils

sudo chmod 777 run
sudo chmod 777 server
